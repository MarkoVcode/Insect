<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>ThingOnCloud WEB interface</display-name>
    <description>
        This is web interface for ThingOnCloud.com online service.
    </description>
    <filter>
        <filter-name>default</filter-name>
        <filter-class>com.thingoncloud.webapp.run.filter.StaticFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>default</filter-name>
        <url-pattern>/assets/*</url-pattern>
        <url-pattern>*.ico</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>TOCWeb</filter-name>
        <filter-class>spark.servlet.SparkFilter</filter-class>
        <init-param>
            <param-name>applicationClass</param-name>
            <param-value>com.thingoncloud.webapp.run.WebApplicationDriver</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>TOCWeb</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
